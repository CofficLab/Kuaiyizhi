---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Search.astro';
import SearchForm from '@/components/SearchForm.astro';

const props = Astro.props as Props;
const isHome = Astro.props.id === '';
---

<div class="flex flex-row gap-4 w-full justify-between">
  <div class="w-full"></div>
  {
    !isHome && (
      <div class="bg-red-400/0 flex flex-row justify-end">
        <div class="h-1/3 flex justify-center items-center my-auto">
          <SearchForm />
        </div>
      </div>
    )
  }
</div>
