---
import { Image } from 'astro:assets';
import bookCover from '../assets/book.png';

interface Props {
    link: string;
    book: any;
    childrenCount: number;
}

const { link, book, childrenCount } = Astro.props;
---

<div>
    <a href={link} class="justify-center flex no-underline text-gray-100">
        <div class="w-56 h-80">
            <div
                class="bg-gradient-to-br w-full h-full from-green-900/90 to-cyan-900/40 rounded-3xl shadow-lg">
                <div
                    class="bg-base-100/40 w-full h-full rounded-3xl border border-white/50
    hover:scale-105 hover:shadow-2xl transform duration-200">
                    <div class="card-body p-1 h-full">
                        <Image
                            src={bookCover}
                            alt={book.title}
                            class="h-3/5 w-full"
                        />
                        <div class="">
                            <h2 class="text-lg text-center">{book.title}</h2>
                            <!-- <p class="text-center text-sm">共 {childrenCount} 篇章节</p> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
