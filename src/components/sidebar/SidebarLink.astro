---
interface Props {
  label: string;
  link: string;
  isActive?: boolean;
}

const { label, link } = Astro.props;

// 获取当前 URL 路径
const currentPath = Astro.url.pathname;

// 判断链接是否激活：优先使用传入的 isActive，否则比较当前路径与链接
const isActive = currentPath === link;
---

<li>
  <a
    href={link}
    class:list={[
      'active:text-primary',
      'hover:text-primary',
      { 'bg-accent': isActive },
      { active: isActive },
    ]}>
    {label}
  </a>
</li>
