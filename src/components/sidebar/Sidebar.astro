---
import type { SidebarItem } from '@/models/SidebarItem';
import SidebarLink from './SidebarLink.astro';
import SidebarGroup from './SidebarGroup.astro';

interface Props {
  item: SidebarItem;
}

const { item } = Astro.props;
---

<ul class="menu menu-sm w-full space-y-1">
  {
    item &&
      (item.isLink() ? (
        <SidebarLink label={item.getLabel()} link={item.getLink()} />
      ) : (
        <SidebarGroup
          label={item.getLabel()}
          items={item.getItemsIncludingSelf()}
        />
      ))
  }
</ul>
