---
import AppLayout from '@layouts/AppLayout.astro';
import HeroSection from '@components/home/HeroSection.astro';
import CardGrid from '@components/home/CardGrid.astro';
import Lang from '@/models/Lang';
import CourseDoc from '@/models/CourseDoc';
export interface Props {
  lang: Lang;
}
const { lang } = Astro.props;
const title = lang.isChinese() ? '快易知' : 'Quick Knowledge';
const description = lang.isChinese()
  ? '追寻知识的纯粹之光'
  : 'Pursuing the Pure Light of Knowledge';
---

<AppLayout title={title} description={description} backgroudColor="colorful">
  <div>
    <HeroSection lang={lang} />
    <CardGrid lang={lang} />
  </div>
</AppLayout>
