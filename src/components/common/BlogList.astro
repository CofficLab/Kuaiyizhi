---
import { RiInboxArchiveLine } from '@remixicon/vue';
import type BlogDoc from '@/models/BlogDoc';

interface Props {
  blogs: BlogDoc[];
  emptyTitle: string;
  emptyDescription: string;
}

const { blogs, emptyTitle, emptyDescription } = Astro.props;
---

<div class="p-4">
  {
    blogs.length > 0 ? (
      <ul class="list-none pl-5">
        {blogs.map((blog) => (
          <li class="mb-2 flex items-center gap-3">
            <a
              href={blog.getLink()}
              class="text-blue-500 no-underline hover:no-underline">
              {blog.getTitle()}
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <div class="text-center py-8">
        <div class="text-gray-400 flex flex-col items-center">
          <RiInboxArchiveLine class="text-5xl mb-4 h-36 w-36" />
          <p class="text-lg">{emptyTitle}</p>
          <p class="text-sm">{emptyDescription}</p>
        </div>
      </div>
    )
  }
</div>

