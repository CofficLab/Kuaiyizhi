---
import CoursePage from '@components/CoursePage.astro';
import { getPathsZhCn } from '@paths/courses';

export const prerender = true;

const { slug } = Astro.params;

// Astro 会自动调用 getStaticPaths 函数来生成静态路径
export async function getStaticPaths() {
  return getPathsZhCn();
}
---

<CoursePage slug={slug} locale="zh-cn" redirectPath="/zh-cn/404" />
