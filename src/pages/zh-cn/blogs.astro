---
import { getBlogs } from '../../database/docs';
import BlogList from '../../components/BlogList.vue';
import BlogsLayout from '../../layouts/BlogsLayout.astro';
const posts = await getBlogs('zh-cn');
const zhPosts = posts.filter((post) => post.id.startsWith('zh-cn'));
---

<BlogsLayout title="所有文章" description="我的博客" lang="zh-cn">
    <BlogList posts={zhPosts} lang="zh-cn" />
</BlogsLayout>
