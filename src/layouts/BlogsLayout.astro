---
import AppLayout from './AppLayout.astro';
import { getTags } from '../utils/docs';
import type SidebarItem from '../interface/SidebarItem';
import type { BlogLayoutProps } from '../interface/BlogLayoutProps';

const { title, description, headings = [] } = Astro.props as BlogLayoutProps;
const tags = await getTags();
const sidebarItems: SidebarItem[] = tags.map((tag) => ({
    label: tag,
    link: `/blogs/tags/${tag}`,
}));
---

<AppLayout
    title={title}
    description={description}
    template="splash"
    frontmatter={{
        title: title,
        description: description,
        draft: true,
    }}
    hasSidebar={true}
    sidebar={sidebarItems}
    headings={[]}>
    <slot />
</AppLayout>
