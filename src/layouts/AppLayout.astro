---
import Footer from '@/components/footer/Footer.astro';
import '../app.css';
import SmartHeader from './SmartHeader.astro';
import type { SidebarItem } from '@/models/SidebarItem';
import type { Heading } from '@/models/Heading';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  template: 'splash' | 'doc';
  frontmatter: {
    title: string;
    description: string;
    template: 'splash' | 'doc';
  };
  headings?: Heading[];
  sidebar?: SidebarItem | null | undefined;
  hidePageTitle?: boolean;
  isDocContent?: boolean;
}

const props = Astro.props as Props;
const { title, description, frontmatter, isDocContent } = props;

const locale = Astro.preferredLocale || 'en';
---

<!doctype html>
<html lang={locale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? frontmatter.title}</title>
    <meta name="description" content={description ?? frontmatter.description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-slate-50">
    <SmartHeader locale={locale} />

    <div class:list={['py-24', isDocContent ? 'bg-base-100/90' : '']}>
      <slot />
    </div>

    <Footer />
    <ClientRouter />
  </body>
</html>
