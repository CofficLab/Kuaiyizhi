---
import Footer from '@/components/footer/Footer.astro';
import '../app.css';
import SmartHeader from './SmartHeader.astro';
import type { SidebarItem } from '@/models/SidebarItem';
import type { Heading } from '@/models/Heading';
import { ClientRouter } from 'astro:transitions';
import { getLangFromPathname } from '@/utils/lang';
import { isHome } from '@/utils/links';

interface Props {
  title: string;
  description: string;
  headings?: Heading[];
  sidebar?: SidebarItem | null | undefined;
  hidePageTitle?: boolean;
  backgroudColor?: 'base' | 'colorful';
}

const props = Astro.props as Props;
const { title, description, backgroudColor } = props;

const locale = isHome(Astro.url.pathname)
  ? Astro.preferredLocale
  : getLangFromPathname(Astro.url.pathname);
---

<!doctype html>
<html lang={locale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <SmartHeader />

    <div
      class:list={[
        'py-24 min-h-screen',
        backgroudColor === 'base' ? 'bg-base-100/95' : '',
      ]}>
      <slot />
    </div>

    <Footer transition:persist />
    <ClientRouter />
  </body>
</html>
