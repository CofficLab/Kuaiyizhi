---
import AppLayout from './AppLayout.astro';
import { getMetaIds } from '../utils/docs';
import type SidebarItem from '../interface/SidebarItem';
import type { BlogLayoutProps } from '../interface/BlogLayoutProps';

const { title, description, headings = [] } = Astro.props as BlogLayoutProps;
const metaIds = await getMetaIds(Astro.currentLocale ?? 'en');
const sidebarItems: SidebarItem[] = metaIds.map((metaId) => ({
    label: metaId,
    link: `/${metaId.replace('zh-cn/', '').replace('en/', '')}`,
}));
---

<AppLayout
    title={title}
    description={description}
    template="doc"
    frontmatter={{
        title: title,
        description: description,
        template: 'doc',
        draft: true,
    }}
    hasSidebar={true}
    sidebar={sidebarItems}
    headings={headings}>
    <slot />
</AppLayout>
