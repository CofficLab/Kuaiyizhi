---
import AppLayout from './AppLayout.astro';
import { getMetaSidebarItems } from '../database/meta';
import SidebarItem from '../types/SidebarItem';
import { logger } from '../utils/logger';

interface Props {
  title: string;
  description: string;
  headings?: Array<{ depth: number; slug: string; text: string }>;
  lang: string;
}

const debug = false;
const { title, description, headings = [], lang } = Astro.props;
const sidebarItems: SidebarItem[] = await getMetaSidebarItems(lang);

if (debug) {
  logger.array(`meta sidebarItems`, sidebarItems);
}
---

<AppLayout
  title={title}
  description={description}
  template="doc"
  frontmatter={{
    title: title,
    description: description,
    template: 'doc',
  }}
  hasSidebar={true}
  sidebar={sidebarItems}
  headings={headings}
  hidePageTitle={true}>
  <slot />
</AppLayout>
