---
import type { SidebarItem } from '@/models/SidebarItem';
import SidebarItemComponent from './SidebarItem.astro';

interface Props {
  item: SidebarItem;
}

const { item } = Astro.props;
---

<aside
  class="hidden bg-base-200 rounded-box lg:block fixed top-14 ml-4 px-1 py-4 left-0 w-60 h-[calc(100vh-4rem)] border-r border-base-200 dark:border-base-300 overflow-y-auto [scrollbar-width:thin] [scrollbar-color:var(--tw-text-opacity)_transparent] hover:[scrollbar-color:var(--tw-text-opacity)_transparent]">
  <ul class="menu w-full">
    {item && <SidebarItemComponent item={item} />}
  </ul>
</aside>

<style>
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: rgb(var(--tw-text-opacity) / 0.3);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: rgb(var(--tw-text-opacity) / 0.5);
  }
</style>
