---
import AppLayout from './AppLayout.astro';
import { getTags } from '../database/blogs';
import { SidebarItem } from '@/models/Sidebar';
import { logger } from '../utils/logger';

interface Props {
  title: string;
  description: string;
  headings?: Array<{ depth: number; slug: string; text: string }>;
  lang: string;
}

const debug = false;
const { title, description, headings = [], lang } = Astro.props;
const tags = await getTags(lang);

if (debug) {
  logger.array('tags', tags);
}

const sidebarItems = new SidebarItem({
  type: 'group',
  label: 'Tags',
  items: tags.map(
    (tag) =>
      new SidebarItem({
        type: 'link',
        label: tag,
        link: `/blogs/tags/${tag}`,
      })
  ),
});
---

<AppLayout
  title={title}
  description={description}
  template="doc"
  frontmatter={{
    title: title,
    description: description,
    template: 'doc',
  }}
  hasSidebar={true}
  sidebar={sidebarItems}
  headings={headings}
  hidePageTitle={false}>
  <slot />
</AppLayout>
