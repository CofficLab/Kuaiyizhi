---
import AppLayout from './AppLayout.astro';
import { getTags } from '../database/docs';
import type SidebarItem from '../interface/SidebarItem';
import type { BlogLayoutProps } from '../interface/BlogLayoutProps';
import { logger } from '../utils/logger';

const debugTitle = '🐒 BlogLayout';
const {
    title,
    description,
    headings = [],
    lang,
} = Astro.props as BlogLayoutProps;
const tags = await getTags(lang);

logger.array('tags', tags);

const sidebarItems: SidebarItem[] = tags.map((tag) => ({
    label: tag,
    link: `/blogs/tags/${tag}`,
}));
---

<AppLayout
    title={title}
    description={description}
    template="doc"
    frontmatter={{
        title: title,
        description: description,
        template: 'doc',
        draft: true,
    }}
    hasSidebar={true}
    sidebar={sidebarItems}
    headings={headings}>
    <slot />
</AppLayout>
